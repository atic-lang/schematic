enum Operator {
    Add();
    Subtract();
    Multiply();
    Divide();
    Or();
    And();
    Greater();
    GreaterEq();
    Smaller();
    SmallerEq();
    Equals();
    NonEquals();
}

fn OperatorFromTree(node: Node) -> Operator {
    let name = child(node).record.data;
    if name == "+" {
        return Operator.Add();
    } else if name == "-" {
        return Operator.Subtract();
    } else if name == "*" {
        return Operator.Multiply();
    } else if name == "/" {
        return Operator.Divide();
    } else if name == "||" {
        return Operator.Or();
    } else if name == "&&" {
        return Operator.And();
    } else if name == ">=" {
        return Operator.GreaterEq();
    } else if name == ">" {
        return Operator.Greater();
    } else if name == "<=" {
        return Operator.SmallerEq();
    } else if name == "<" {
        return Operator.Smaller();
    } else if name == "==" {
        return Operator.Equals();
    } else if name == "!=" {
        return Operator.NonEquals();
    } else {
        throw NotFoundMsgError("cant find " + name + " to match");
    }

}